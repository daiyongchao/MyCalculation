<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3E3E3">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/cal_recycler_view">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/cal_clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="20sp"
                android:textColor="#ff0000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_seven"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_four"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_percent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/cal_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="de"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_eight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_five"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_zero"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/cal_divide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>
            <Button
                android:id="@+id/cal_night"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_six"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_point"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/cal_multi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>
            <Button
                android:id="@+id/cal_minus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_plus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>

            <Button
                android:id="@+id/cal_equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="="
                android:textSize="20sp"
                android:textColor="#000000"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_btn_selector"/>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>
